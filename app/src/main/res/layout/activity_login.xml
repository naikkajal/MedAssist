<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/profilebgimage"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back to"
        android:textSize="24sp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/text_primary"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MedAssist"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginRight="45dp"
        android:fontFamily="serif"
        android:textColor="@color/text_primary"
        android:layout_gravity="right"
        android:layout_marginBottom="20dp"/>
    
    <EditText android:id="@+id/etName"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:layout_marginTop="5dp"
        android:minHeight="48dp"/>

    <EditText android:id="@+id/etPassword"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"/>

    <Button android:id="@+id/btnLogin"
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_primary"
        android:textColor="@color/app_on_primary"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="16sp"
            android:textColor="@color/app_secondary" />

        <TextView
            android:id="@+id/tvSignupRedirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/app_secondary"
            android:paddingStart="4dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
