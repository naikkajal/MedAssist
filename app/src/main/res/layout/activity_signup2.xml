<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/profilebgimage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Up Your "
        android:fontFamily="serif"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="400dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_primary"
        android:layout_gravity="right" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Credentials"
        android:fontFamily="serif"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_primary"
        android:layout_gravity="right"/>



    <EditText android:id="@+id/etEmail"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:layout_marginTop="15dp"/>

    <EditText android:id="@+id/etMobile"
        android:hint="Mobile Number" android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:layout_marginTop="15dp"/>

    <EditText android:id="@+id/etPassword"
        android:hint="Password" android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:layout_marginTop="15dp"/>



    <Button android:id="@+id/btnSignup"
        android:text="Sign Up" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_primary"
        android:textColor="@color/app_on_primary"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="2dp">

    <TextView
        android:text="Already have an account? "
        android:textColor="@color/app_secondary"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <TextView android:id="@+id/tvLoginRedirect"
        android:text="Login"
        android:textColor="@color/app_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        />
    </LinearLayout>
</LinearLayout>
</ScrollView>
